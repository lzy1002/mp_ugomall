/* pages/category/category.wxss */
.category-container {
  display: flex;
  width: 100%;
  height: 100vh;
}

.left-scroll {
  flex: 30%;
  height: 100%;
  border-right: 1px solid #eee;
}

.left-scroll .left-item {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.left-scroll .left-item.active {
  color: var(--themeColor);
  border-left: 3px solid var(--themeColor);
}

.right-scroll {
  height: 100%;
}

.right-item {

}

.right-item .title {
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.right-item .title .line {
  color: #ccc;
  padding: 0 10rpx;
}

.right-item .content {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.right-item .content .content-item {
  width: 33.3%;
  text-align: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.right-item .content .content-item .image-box {
  padding: 0 10px;
}

.right-item .content .content-item image {
  width: 100%;
}

.right-item .content .content-item .name {
  font-size: 24rpx;
}
