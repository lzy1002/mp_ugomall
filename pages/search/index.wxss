/* pages/search/search.wxss */
page {
  background-color: #eee;
}

.search {
  display: flex;
  padding: 20rpx;
}

.search input {
  flex: 1;
  background-color: #fff;
  height: 50rpx;
  margin-right: 20rpx;
  border-radius: 3px;
  padding-left: 30rpx;
}

.search .cancel {
  width: 80rpx;
  height: 50rpx;
  padding: 0;
  font-size: 28rpx;
  font-weight: 400;
}

.result-box {
  border-radius: 4px;
  overflow: hidden;
  margin: 0 20rpx;
}

.result-box .result-item {
  padding: 15rpx 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ccc;
}

.result-box .result-item:last-child {
  border: none;
}
